{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strict": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"],
            "@components/*": ["src/web/components/*"],
            "@styles/*": ["src/web/styles/*"]
        }
    },
    "include": ["src/**/*"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}